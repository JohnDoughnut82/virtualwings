<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_menu"/>

        <!-- Content Area -->
        <ScrollView
            android:id="@+id/squadron_scroll_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- CREATE SQUADRON LAYOUT -->
                <LinearLayout
                    android:id="@+id/create_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Emblem -->
                    <ImageView
                        android:id="@+id/squad_emblem_preview"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_upload"
                        android:scaleType="centerCrop"
                        android:background="@drawable/emblem_border"
                        android:contentDescription="@string/squadron_emblem"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        android:id="@+id/btn_upload_emblem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_emblem"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp" />

                    <!-- Name -->
                    <EditText
                        android:id="@+id/et_squadron_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="@string/squadron_name"
                        android:inputType="textPersonName"
                        android:layout_marginTop="16dp" />

                    <!-- Description -->
                    <EditText
                        android:id="@+id/et_squadron_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="@string/description"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:gravity="top"
                        android:layout_marginTop="12dp" />

                    <!-- Region -->
                    <Spinner
                        android:id="@+id/spinner_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp" />

                    <!-- Time Zone -->
                    <Spinner
                        android:id="@+id/spinner_timezone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp" />

                    <!-- Create Button -->
                    <Button
                        android:id="@+id/btn_create_squadron"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_squadron"
                        android:layout_marginTop="24dp" />
                </LinearLayout>

                <!-- SQUADRON INFO LAYOUT -->
                <LinearLayout
                    android:id="@+id/info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <!-- Emblem -->
                    <ImageView
                        android:id="@+id/iv_squad_emblem"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/emblem_border"
                        android:contentDescription="@string/squadron_emblem" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/tv_squadron_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:textColor="?android:textColorPrimary"
                        android:fontFamily="?attr/fontFamily"/>

                    <!-- Description -->
                    <TextView
                        android:id="@+id/tv_squadron_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textColor="?android:textColorPrimary"
                        android:fontFamily="?attr/fontFamily"/>

                    <!-- Region & Timezone -->
                    <TextView
                        android:id="@+id/tv_squadron_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="?android:textColorPrimary"
                        android:fontFamily="?attr/fontFamily"/>

                    <TextView
                        android:id="@+id/tv_squadron_timezone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="?android:textColorPrimary"
                        android:fontFamily="?attr/fontFamily"/>

                    <!-- Member Count -->
                    <TextView
                        android:id="@+id/tv_member_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:layout_marginTop="8dp"
                        android:textColor="?android:textColorPrimary"
                        android:fontFamily="?attr/fontFamily"/>

                    <!-- Leave / Disband Buttons -->
                    <Button
                        android:id="@+id/btn_leave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/leave_squadron"
                        android:layout_marginTop="16dp" />

                    <Button
                        android:id="@+id/btn_disband"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/disband_squadron"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
